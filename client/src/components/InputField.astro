---
export interface Props {
  placeholder: string;
  type: string;
  value: string;
}

const { type, placeholder, value } = Astro.props;
const classDetails =
  type === "submit"
    ? "max-w-[90vw] w-[350px] bg-[#007CD5] text-white py-2 px-3 my-4 rounded-md poppins cursor-pointer"
    : "max-w-[90vw] w-[350px] border-[.12em] text-black py-2 px-3 my-4 rounded-md poppins cursor-pointer";
---

<input
  class={classDetails}
  type={type}
  placeholder={placeholder}
  value={value}
/>
