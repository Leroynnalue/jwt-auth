---
import Form from "../layouts/Form.astro";
import InputField from "../components/InputField.astro";
---

<Form
  title="Sign In"
  subtitle="Sign in to your account to continue"
  redirectInfo="Create an account"
  redirectLink="/register/"
  action="/welcome/"
>
  <InputField type="text" placeholder="Email Address" />
  <InputField type="password" placeholder="Password" />
  <a href="#" class="max-w-90vw w-[350px] text-right outline-none border-none"
    >Forgetten Password?</a
  >
  <InputField type="submit" value="Sign In" />
</Form>
